<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta
            name="viewport"
            content="width-device-width"
            ,
            initial-scale="1.0"
        />
        <title>Your Posts</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65"
            crossorigin="anonymous"
        />
        <link rel="stylesheet" href="/css/style.css" />
    </head>
    <style>
        body {
          background-image: url("img/cover1.png");
          background-repeat: no-repeat;
          background-size: cover;
          
        }
        </style>
    <body>
        
        <%- include('nav'); -%>
        <h1
            style="
                text-align: center;
                font-size: 35px;
                padding-top: 15px;
                font-family: 'Times New Roman', Times, serif;
            "
        >
            Your Posts
        </h1>
        <div class="container my-5">
            <div class="row mt-5 g-3">
                <% if (selfbloglist) { selfbloglist.forEach(function(b) { %>
                    <% if ((user.id == b.uId && role == 'USER') ||
                            role == 'ADMIN') { %>
                <div class="col-md-3 col-sm-12 card">
                    <div alt="square card" class="card-body">
                        <div class="card-title">
                            
                            <h4><%= b.bTitle %></h4>
                            <h6><%= b.bLink %></h6>
                            <h6><%= b.bContent.substring(0,200000) %>...</h6>
                        </div>
                        
                        <div class="card-subtitle mb-2 text-muted">
                            
                                <a href="/selfbloglist/<%=b.bId%>/<%=b.uId%>" class="btn btn-danger">
                                    
                                    Delete Blog
                                </a>
                            
                            
                        </div>
                    </div>
                </div>
                <% } %>
                <% });} %>
                
            </div>

            
        </div>
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
            crossorigin="anonymous"
        ></script>
        <script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>
        <script>
            $("#create").click(function () {
                $("#input").show();
                $("#create").toggle();
            });
            $("#cancel").click(function () {
                $("#input").toggle();
                $("#create").toggle();
            });
        </script>
    </body>
</html>
